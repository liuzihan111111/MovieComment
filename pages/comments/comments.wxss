/* pages/comments/comments.wxss */
.m-item{
  padding: 20rpx;
  border-bottom: 2rpx solid #d8d8d8;
  display: flex;
  flex-direction: column;
}
.mTitle{
  font-weight: bolder;
}
.mCon{
  padding: 0;
  display: -webkit-box;/*关键属性*/
  -webkit-box-orient: vertical;/* 关键属性 */
  -webkit-line-clamp:3;/* 关键属性 */
  overflow: hidden;/* 关键属性 */
  text-overflow:ellipsis;/* 超出内容显示省略号*/
  margin-bottom: 20rpx
}
.m-user{
  display: flex;
}
.m-header{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}
.m-userCon{
  color: #777;
  line-height: 40rpx;
  display: flex;
  flex-direction: column;

}